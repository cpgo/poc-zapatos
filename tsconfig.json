{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "alwaysStrict": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "allowJs": true,
    "target": "es2017",
    "rootDir": "./",
    "outDir": "dist",
    "sourceMap": true
  }
}
